{
  "name": "letterbuilder",
  "version": "0.0.2",
  "description": "Build RFC 5322 complaint messages.",
  "main": "./lib/cjs/index.js",
  "module": "./lib/esm/index.js",
  "types": "./lib/esm/index.d.ts",
  "keywords": [
    "email",
    "e-mail",
    "mail",
    "mime",
    "mailparser",
    "emailparser",
    "mail-parser",
    "email-parser",
    "e-mail-parser",
    "mime-parser",
    "mime-message",
    "mime-message-parser",
    "parser",
    "typescript",
    "isomorphic"
  ],
  "scripts": {
    "prepare": "npm run build",
    "build": "npm run build:cjs && npm run build:esm",
    "build:esm": "tsc --module es2015 --outDir lib/esm",
    "build:cjs": "tsc --module commonjs --outDir lib/cjs",
    "test": "jest",
    "lint": "eslint src"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mat-sz/letterbuilder.git"
  },
  "bugs": {
    "url": "https://github.com/mat-sz/letterbuilder/issues"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write"
    ],
    "__tests__/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write"
    ]
  },
  "homepage": "https://github.com/mat-sz/letterbuilder",
  "author": "Mat Sz <contact@matsz.dev>",
  "license": "BSD-3-Clause-Clear",
  "devDependencies": {
    "@types/base64-js": "^1.2.5",
    "@types/jest": "^25.1.4",
    "@types/node": "^13.1.4",
    "husky": "^4.2.3",
    "jest": "^25.2.4",
    "lint-staged": "^10.0.9",
    "prettier": "^2.0.2",
    "ts-jest": "^25.3.0",
    "ts-node-dev": "^1.0.0-pre.44",
    "typescript": "^4.8.3"
  },
  "dependencies": {
    "base64-js": "^1.3.1"
  },
  "exports": {
    ".": {
      "require": "./lib/cjs/index.js",
      "import": "./lib/esm/index.js",
      "types": "./lib/esm/index.d.ts"
    }
  }
}
